@model IEnumerable<MyTournaments.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<p>
    <button class="menubuttons back-button" onclick="location.href = '@Url.Action("Index", "Tournaments")'">Back</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    <button class="menubuttons others-button" onclick="location.href = '@Url.Action("Details", new { id = item.Id })'">Teams</button>
                    <button class="menubuttons edit-button" onclick="location.href = '@Url.Action("Edit", new { id = item.Id })'">Edit</button>
                    <button class="menubuttons delete-button" onclick="location.href = '@Url.Action("Delete", new { id = item.Id })'">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>