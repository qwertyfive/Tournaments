@model IEnumerable<MyTournaments.Player>

@{
    ViewData["Title"] = "Index";
}

    <h1>Player</h1>

    <p>
        <button class="menubuttons crete-button" onclick="location.href = '@Url.Action("Create", new { teamId = @ViewBag.teamId, gameId = @ViewBag.gameId, gameName = @ViewBag.gameName })'">Add Player</button>
        <button class="menubuttons back-button" onclick="location.href = '@Url.Action("Index", "Teams", new { id = @ViewBag.gameId, name = @ViewBag.gameName})'">Back</button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntranceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntranceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.Name)
            </td>
            <td>
                <button class="menubuttons others-button" onclick="location.href = '@Url.Action("Details", new { id = item.Id })'">Details</button>
                <button class="menubuttons edit-button" onclick="location.href = '@Url.Action("Edit", new { id = item.Id, teamId = @ViewBag.teamId, gameId = @ViewBag.gameId, gameName = @ViewBag.gameName })'">Edit</button>
                <button class="menubuttons delete-button" onclick="location.href = '@Url.Action("Delete", new { id = item.Id, teamId = @ViewBag.teamId, gameId = @ViewBag.gameId, gameName = @ViewBag.gameName })'">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
