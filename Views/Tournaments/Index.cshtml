@model IEnumerable<MyTournaments.Tournament>

@{
    ViewData["Title"] = "Tournaments";
}

    <h1>Tournaments</h1>

    <p>
        <button class="menubuttons crete-button" onclick="location.href = '@Url.Action("Create")'">Create New</button>
        <button class="menubuttons back-button" onclick="location.href = '@Url.Action("Index", "Home")'">Back</button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrizeFund)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sponsor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrizeFund)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sponsor.Name)
            </td>
            <td>
                <button class="menubuttons others-button" onclick="location.href = '@Url.Action("Details", new { id = item.Id })'">Details</button>
                <button class="menubuttons others-button" onclick="location.href = '@Url.Action("GamesByTournament", "Games", new { id = item.Id })'">Games</button>
                <button class="menubuttons edit-button" onclick="location.href = '@Url.Action("Edit", new { id = item.Id })'">Edit</button>
                <button class="menubuttons delete-button" onclick="location.href = '@Url.Action("Delete", new { id = item.Id })'">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
