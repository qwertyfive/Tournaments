@model MyTournaments.TournamentGames

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TournamentGames</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.gameId" name="GameId" />
            <input type="hidden" value="@ViewBag.gameName" name="gameName" />
            <div class="form-group">
                <label asp-for="TournametId" class="control-label"></label>
                <select asp-for="TournametId" class="form-control" asp-items="ViewBag.TournametId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<button class="menubuttons backtolist-button" onclick="location.href='javascript:history.go(-1)'">Back to List</button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
