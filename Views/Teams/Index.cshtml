@model IEnumerable<MyTournaments.Team>

@{
    ViewData["Title"] = "Teams";
}

    <h1>@ViewBag.gameName Teams</h1>

    <p>
        <button class="menubuttons crete-button" onclick="location.href = '@Url.Action("Create", new { gameId = @ViewBag.gameId, gameName=@ViewBag.gameName })'">Create New</button>
        <button class="menubuttons back-button" onclick="location.href = '@Url.Action("Index", "Games", new { gameId = @ViewBag.gameId})'">Back</button>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sponsor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sponsor.Name)
            </td>
            <td>
                <button class="menubuttons others-button" onclick="location.href = '@Url.Action("Index", "Players", new { id = item.Id, gameId = @ViewBag.gameId, gameName = item.Game.Name })'">Players</button>
                <button class="menubuttons edit-button" onclick="location.href = '@Url.Action("Edit", new { Id = item.Id, gameId = @ViewBag.gameId })'">Edit</button>
                <button class="menubuttons delete-button" onclick="location.href = '@Url.Action("Delete", new { id = item.Id })'">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>
